<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" stylesheets="@style.css">

    <!-- Выезжающее меню -->
    <left>
        <TitledPane text="☰ Меню" expanded="false">
            <VBox spacing="10" style="-fx-padding: 10;">
                <Button text="Профиль" />
                <Button text="Настройки" />
                <Button text="Выход" />
            </VBox>
        </TitledPane>
    </left>

    <!-- Основной контент -->
    <center>
        <StackPane fx:id="mainContent" >
            <VBox>
                <Label text="Личный кабинет" style="-fx-font-size: 24;" />

                <GridPane hgap="10" vgap="10">
                    <Label text="ФИО:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Телефон:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                </GridPane>

                <Button text="Сохранить" prefWidth="150"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>